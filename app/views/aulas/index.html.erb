<p id="notice"><%= notice %></p>

<h1>Lista de Aulas</h1>

<header>
  <nav class="be-red white">
    <ul class = "no-list row center-xs">
     <li class ="col-md">
      <%= link_to 'Agregar Curso', new_curso_path %>
     </li>
      <li class ="col-md">
      <%= link_to 'Agregar Aula', new_aula_path %>
     </li>
    </ul>
  </nav>
</header>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Piso</th>
      <th>Capacidad</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 


    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.numero %></td>
        <td><%= aula.piso %></td>
        <td><%= aula.capacidad %></td>
        
         <td><%= link_to 'Mostrar', aula %></td>
        <td><%= link_to 'Editar', edit_aula_path(aula) %></td>
        <td><%= link_to 'Eliminar', aula, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
               <td><%=  %></td>
      </tr>
    <% end %>
  </tbody>
</table>




